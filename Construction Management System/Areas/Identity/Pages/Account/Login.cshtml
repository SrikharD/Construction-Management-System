@page
@using Microsoft.AspNetCore.Identity
@model LoginModel
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Construction Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/login-modern.css" />
</head>
<body>
    <div class="login-wrapper">
        <!-- Left Side - Branding -->
        <div class="login-branding">
            <div class="branding-content">
                <div class="branding-icon">
                    <i class="bi bi-building"></i>
                </div>
                <h1>Construction Management System</h1>
                <p>Professional Project & Site Management</p>
                <div class="features-list">
                    <div class="feature-item">
                        <i class="bi bi-check-circle"></i>
                        <span>Real-time Project Tracking</span>
                    </div>
                    <div class="feature-item">
                        <i class="bi bi-check-circle"></i>
                        <span>Worker Management</span>
                    </div>
                    <div class="feature-item">
                        <i class="bi bi-check-circle"></i>
                        <span>Site Coordination</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side - Login Form -->
        <div class="login-form-container">
            <div class="login-form-wrapper">
                <div class="login-header">
                    <h2>Welcome Back</h2>
                    <p>Sign in to your account</p>
                </div>

                @if (!ViewData.ModelState.IsValid && Model.Input != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Login Failed!</strong>
                        <div class="mt-2">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@error.ErrorMessage</div>
                            }
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form method="post" class="login-form">
                    @Html.AntiForgeryToken()
                    
                    <div class="form-group">
                        <label for="Input_Email" class="form-label">
                            <i class="bi bi-envelope"></i> Email Address
                        </label>
                        <input asp-for="Input.Email" class="form-control form-control-lg" 
                               placeholder="Enter your email" required autofocus />
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="form-group">
                        <label for="Input_Password" class="form-label">
                            <i class="bi bi-key"></i> Password
                        </label>
                        <input asp-for="Input.Password" type="password" class="form-control form-control-lg" 
                               placeholder="Enter your password" required />
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="form-check form-check-custom">
                        <input class="form-check-input" asp-for="Input.RememberMe" id="Input_RememberMe" />
                        <label class="form-check-label" for="Input_RememberMe">
                            Remember me for 30 days
                        </label>
                    </div>

                    <button type="submit" class="btn btn-login btn-lg w-100">
                        <i class="bi bi-box-arrow-in-right"></i> Sign In
                    </button>
                </form>

                <div class="divider">
                    <span>Need an account?</span>
                </div>

                <div style="background: #fff3cd; border: 1px solid #ffc107; border-radius: 8px; padding: 1rem; margin-top: 1rem;">
                    <i class="bi bi-info-circle" style="color: #ff9800;"></i>
                    <p style="margin: 0.5rem 0 0 0; color: #333; font-size: 0.9rem;">
                        <strong>To create a new account,</strong> please contact the system administrator. New users are registered by the admin team.
                    </p>
                </div>

                <div class="login-footer">
                    <a asp-controller="Home" asp-action="Help" class="footer-link">
                        <i class="bi bi-question-circle"></i> Need help?
                    </a>
                    <span class="separator">â€¢</span>
                    <a asp-controller="Home" asp-action="Privacy" class="footer-link">
                        <i class="bi bi-shield-lock"></i> Privacy
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

