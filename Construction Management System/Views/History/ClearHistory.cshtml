@{
    ViewData["Title"] = "Clear History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%); color: white; padding: 2rem; border-radius: 12px; margin-bottom: 2rem; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);">
        <h1 style="margin: 0; font-size: 2.5rem;">
            <i class="bi bi-exclamation-triangle"></i> Clear All History
        </h1>
        <p style="margin: 0.5rem 0 0 0; color: rgba(255,255,255,0.8);">This action will permanently delete all your session history</p>
    </div>

    <!-- Confirmation Card -->
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card" style="border: none; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); border-radius: 12px;">
                <div style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%); color: white; padding: 1.5rem; border-radius: 12px 12px 0 0;">
                    <h5 style="margin: 0;">
                        <i class="bi bi-trash"></i> Confirm Clear History
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-circle"></i>
                        <strong>Warning!</strong> This action cannot be undone. All your recently viewed items will be permanently deleted.
                    </div>

                    <p style="color: #666; margin-bottom: 2rem;">
                        The following history will be cleared:
                    </p>

                    <ul style="color: #666; margin-bottom: 2rem;">
                        <li>Recently Viewed Work Orders</li>
                        <li>Recently Viewed Project Sites</li>
                        <li>Recently Viewed Site Workers</li>
                        <li>Recently Viewed Property Owners</li>
                    </ul>

                    <div style="display: flex; gap: 1rem; justify-content: center;">
                        <form asp-action="ClearHistory" method="post" style="margin: 0;">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash"></i> Yes, Clear All History
                            </button>
                        </form>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

