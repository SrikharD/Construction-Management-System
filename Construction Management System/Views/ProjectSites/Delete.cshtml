@model Dogiparthy_Spring25.Models.ProjectSite

@{
    ViewData["Title"] = "Delete Project Site";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%); color: white; padding: 2rem; border-radius: 12px; margin-bottom: 2rem; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);">
        <h1 style="margin: 0; font-size: 2.5rem;">
            <i class="bi bi-exclamation-triangle"></i> Delete Project Site
        </h1>
        <p style="margin: 0.5rem 0 0 0; color: rgba(255,255,255,0.8);">@Model.SiteTitle</p>
    </div>

    <!-- Confirmation Card -->
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card" style="border: none; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); border-radius: 12px;">
                <div style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%); color: white; padding: 1.5rem; border-radius: 12px 12px 0 0;">
                    <h5 style="margin: 0;">
                        <i class="bi bi-trash"></i> Confirm Deletion
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-circle"></i>
                        <strong>Warning!</strong> This action cannot be undone. The project site will be permanently deleted from the system.
                    </div>

                    <h6 style="margin-bottom: 1.5rem; color: #333;">Project Site Details:</h6>
                    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SiteTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SiteTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SizeSqFt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SizeSqFt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SiteType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SiteType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentOwner.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CurrentOwner.LastName)
        </dd>
                    </dl>

                    <div style="margin-top: 2rem; padding-top: 2rem; border-top: 1px solid #ddd;">
                        <h6 style="color: #333; margin-bottom: 1rem;">
                            <i class="bi bi-info-circle"></i> Deletion Status
                        </h6>
                        @if (Model.WorkOrders != null && Model.WorkOrders.Any())
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-exclamation-circle"></i>
                                <strong>Cannot Delete:</strong> This project site has @Model.WorkOrders.Count work order(s) assigned. Please remove all work orders before deleting.
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-success">
                                <i class="bi bi-check-circle"></i>
                                <strong>Ready to Delete:</strong> This project site has no work orders assigned and can be safely deleted.
                            </div>
                        }
                    </div>

                    <div style="display: flex; gap: 1rem; justify-content: center; margin-top: 2rem;">
                        <form asp-action="Delete" method="post" style="margin: 0;">
                            <input type="hidden" asp-for="SiteID" />
                            @if (Model.WorkOrders != null && Model.WorkOrders.Any())
                            {
                                <button type="submit" class="btn btn-danger btn-lg" disabled>
                                    <i class="bi bi-trash"></i> Delete (Disabled)
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-danger btn-lg">
                                    <i class="bi bi-trash"></i> Yes, Delete Permanently
                                </button>
                            }
                        </form>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
