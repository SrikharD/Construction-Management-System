@model IEnumerable<Dogiparthy_Spring25.Models.ProjectSite>

@{
    ViewData["Title"] = "Project Sites";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 style="margin: 0;">
                <i class="bi bi-house-fill"></i> Project Sites
            </h2>
            <small style="color: #666;">Manage all construction project sites</small>
        </div>
        <div class="btn-group-action">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Site
            </a>
            <a asp-action="Search" class="btn btn-outline-dark">
                <i class="bi bi-search"></i> Search
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th><i class="bi bi-building"></i> Site Title</th>
                        <th><i class="bi bi-geo-alt"></i> Location</th>
                        <th><i class="bi bi-rulers"></i> Size (Sq Ft)</th>
                        <th><i class="bi bi-tag"></i> Type</th>
                        <th style="text-align: center;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@Html.DisplayFor(modelItem => item.SiteTitle)</strong></td>
                            <td>@Html.DisplayFor(modelItem => item.Location)</td>
                            <td>@Html.DisplayFor(modelItem => item.SizeSqFt)</td>
                            <td>
                                <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.SiteType)</span>
                            </td>
                            <td style="text-align: center;">
                                <div class="btn-group-action" style="justify-content: center;">
                                    <a asp-action="Details" asp-route-id="@item.SiteID" class="btn btn-sm btn-primary" title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.SiteID" class="btn btn-sm btn-warning" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.SiteID" class="btn btn-sm btn-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div style="background: #f0f8ff; border-left: 4px solid #0066cc; padding: 2rem; border-radius: 8px; text-align: center;">
            <i class="bi bi-inbox" style="font-size: 2rem; color: #0066cc; display: block; margin-bottom: 1rem;"></i>
            <h4>No Project Sites Found</h4>
            <p style="color: #666; margin-bottom: 1rem;">Start by creating your first project site.</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Site
            </a>
        </div>
    }



    <div class="mt-4 pt-3 border-top">
        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark">
            <i class="bi bi-arrow-left"></i> Back to Home
        </a>
    </div>
</div>