@model IEnumerable<WorkAllocation>
@{
    ViewData["Title"] = "Manage Site Workers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Site Workers</h2>

<table class="table table-striped table-bordered table-hover table-md text-center">
    <thead class="table-dark text-white">
        <tr>
            <th>Worker Name</th>
            <th>Email</th>
            <th>Assigned Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SiteWorker.FirstName @item.SiteWorker.LastName</td>
                <td>@item.SiteWorker.Email</td>
                <td>@item.AssignedDate.ToShortDateString()</td>
                <td>
                    <a asp-action="DeleteSiteWorker" asp-route-id="@item.WorkID" class="btn btn-danger btn-sm">
                        Remove
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>

<a asp-action="AssignSiteWorkers" asp-route-id="@ViewBag.Id" class="btn btn-outline-dark">Assign More Workers</a> 
<a asp-action="Index" class="btn btn-outline-dark">Back to Work Orders</a>
