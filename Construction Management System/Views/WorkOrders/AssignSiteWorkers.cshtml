@using Dogiparthy_Spring25.ViewModels
@model List<WorkOrder_AddSiteWorker_ViewModel>
@{
    ViewData["Title"] = "Assign Site Workers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Assign Site Workers</h2>

<form asp-action="AssignSiteWorkers" method="post">
    <input type="hidden" name="id" value="@ViewBag.WorkOrderID" />

    <table class="table table-striped table-bordered table-hover table-md text-center">
        <thead class="table-dark text-white">
            <tr>
                <th>Select</th>
                <th>Worker Name</th>
                <th>Email</th>
                <th>Hourly Wage</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        <input asp-for="@Model[i].Selected" class="form-check-input" />
                        <input type="hidden" asp-for="@Model[i].SiteWorker.PersonID" />
                    </td>
                    <td>@Model[i].SiteWorker.FirstName @Model[i].SiteWorker.LastName</td>
                    <td>@Model[i].SiteWorker.Email</td>
                    <td>@Model[i].SiteWorker.HourlyWage</td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Assign Selected Workers</button>
</form>
