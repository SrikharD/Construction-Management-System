@model IEnumerable<Dogiparthy_Spring25.Models.WorkOrder>

@{
    ViewData["Title"] = "Work Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 style="margin: 0;">
                <i class="bi bi-clipboard-check"></i> Work Orders
            </h2>
            <small style="color: #666;">Manage all construction work orders and tasks</small>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Work Order
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th><i class="bi bi-list-task"></i> Task Name</th>
                        <th><i class="bi bi-file-text"></i> Description</th>
                        <th><i class="bi bi-hourglass-split"></i> Status</th>
                        <th><i class="bi bi-calendar-event"></i> End Date</th>
                        <th><i class="bi bi-house-fill"></i> Project Site</th>
                        <th style="text-align: center;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@Html.DisplayFor(modelItem => item.TaskName)</strong></td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>
                                @{
                                    var statusBadgeClass = item.Status.ToString() switch
                                    {
                                        "NotStarted" => "bg-warning",
                                        "InProgress" => "bg-info",
                                        "Completed" => "bg-success",
                                        "OnHold" => "bg-secondary",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @statusBadgeClass">@Html.DisplayFor(modelItem => item.Status)</span>
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.EstimatedEndDate, "{0:MM/dd/yyyy}")</td>
                            <td>@Html.DisplayFor(modelItem => item.ProjectSite.SiteTitle)</td>
                            <td style="text-align: center;">
                                <div class="btn-group-action" style="justify-content: center;">
                                    <a asp-action="Details" asp-route-id="@item.WorkOrderID" class="btn btn-sm btn-primary" title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.WorkOrderID" class="btn btn-sm btn-warning" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="ManageSiteWorkers" asp-route-id="@item.WorkOrderID" class="btn btn-sm btn-info" title="Manage Workers">
                                        <i class="bi bi-people"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.WorkOrderID" class="btn btn-sm btn-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div style="background: #f0f8ff; border-left: 4px solid #0066cc; padding: 2rem; border-radius: 8px; text-align: center;">
            <i class="bi bi-inbox" style="font-size: 2rem; color: #0066cc; display: block; margin-bottom: 1rem;"></i>
            <h4>No Work Orders Found</h4>
            <p style="color: #666; margin-bottom: 1rem;">Start by creating your first work order.</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Work Order
            </a>
        </div>
    }



    <div class="mt-4 pt-3 border-top">
        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark">
            <i class="bi bi-arrow-left"></i> Back to Home
        </a>
    </div>
</div>