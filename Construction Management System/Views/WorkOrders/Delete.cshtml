@model Dogiparthy_Spring25.Models.WorkOrder

@{
    ViewData["Title"] = "Delete Work Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%); color: white; padding: 2rem; border-radius: 12px; margin-bottom: 2rem; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);">
        <h1 style="margin: 0; font-size: 2.5rem;">
            <i class="bi bi-exclamation-triangle"></i> Delete Work Order
        </h1>
        <p style="margin: 0.5rem 0 0 0; color: rgba(255,255,255,0.8);">@Model.TaskName</p>
    </div>

    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle"></i>
            <strong>Error!</strong> @ViewData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Confirmation Card -->
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card" style="border: none; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); border-radius: 12px;">
                <div style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%); color: white; padding: 1.5rem; border-radius: 12px 12px 0 0;">
                    <h5 style="margin: 0;">
                        <i class="bi bi-trash"></i> Confirm Deletion
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-circle"></i>
                        <strong>Warning!</strong> This action cannot be undone. The work order will be permanently deleted from the system.
                    </div>

                    <h6 style="margin-bottom: 1.5rem; color: #333;">Work Order Details:</h6>
                    <dl class="row">
                        <dt class = "col-sm-3">
                            @Html.DisplayNameFor(model => model.TaskName)
                        </dt>
                        <dd class = "col-sm-9">
                            @Html.DisplayFor(model => model.TaskName)
                        </dd>
                        <dt class = "col-sm-3">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class = "col-sm-9">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                        <dt class = "col-sm-3">
                            @Html.DisplayNameFor(model => model.Status)
                        </dt>
                        <dd class = "col-sm-9">
                            @Html.DisplayFor(model => model.Status)
                        </dd>
                        <dt class = "col-sm-3">
                            @Html.DisplayNameFor(model => model.EstimatedEndDate)
                        </dt>
                        <dd class = "col-sm-9">
                            @Html.DisplayFor(model => model.EstimatedEndDate)
                        </dd>
                        <dt class = "col-sm-3">
                            @Html.DisplayNameFor(model => model.ProjectSite.SiteTitle)
                        </dt>
                        <dd class = "col-sm-9">
                            @Html.DisplayFor(model => model.ProjectSite.SiteTitle)
                        </dd>
                    </dl>

                    <div style="margin-top: 2rem; padding-top: 2rem; border-top: 1px solid #ddd;">
                        <h6 style="color: #333; margin-bottom: 1rem;">
                            <i class="bi bi-info-circle"></i> Deletion Status
                        </h6>
                        @if (Model.WorkAllocations != null && Model.WorkAllocations.Any())
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-exclamation-circle"></i>
                                <strong>Cannot Delete:</strong> This work order has @Model.WorkAllocations.Count site worker(s) assigned. Please remove all workers before deleting.
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-success">
                                <i class="bi bi-check-circle"></i>
                                <strong>Ready to Delete:</strong> This work order has no workers assigned and can be safely deleted.
                            </div>
                        }
                    </div>

                    <div style="display: flex; gap: 1rem; justify-content: center; margin-top: 2rem;">
                        <form asp-action="Delete" method="post" style="margin: 0;">
                            <input type="hidden" asp-for="WorkOrderID" />
                            @if (Model.WorkAllocations != null && Model.WorkAllocations.Any())
                            {
                                <button type="submit" class="btn btn-danger btn-lg" disabled>
                                    <i class="bi bi-trash"></i> Delete (Disabled)
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-danger btn-lg">
                                    <i class="bi bi-trash"></i> Yes, Delete Permanently
                                </button>
                            }
                        </form>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
